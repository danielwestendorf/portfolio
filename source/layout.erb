<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= data.page.title || "Portfolio" %> | Daniel Westendorf</title>
    <link rel="shortcut icon" href="/images/favicon.ico" />
    <%= stylesheet_link_tag "all" %>
    <%= stylesheet_link_tag "high-dpi", media: "only screen and (-webkit-min-device-pixel-ratio: 2)" %>
  </head>
  <body>
    <div class="container">
      <div class="row-fluid">
        <div id="wrapper" class="span12">
          <div id="sidebar" class="span3">
            <a id="logo" href="/" class="DWjax">
              <div>
                PORTFOLIO
              </div>
            </a>
            <p>daniel westendorf</p>
            <p id="blurb">
              Sysadmin, developer, and hacker. Fixing challenging problems with simple solutions.
            </p>
            <p id="social-icons"><a target="_blank" href="http://www.facebook.com/deedubaya"><i class="icon-facebook-sign"></i></a><a target="_blank" href="http://www.twitter.com/dwestendorf"><i class="icon-twitter-sign"></i></a><a target="_blank" href="http://github.com/danielwestendorf"><i class="icon-github-sign"></i></a><a target="_blank" href="http://www.linkedin.com/pub/daniel-westendorf/4/404/76b"><i class="icon-linkedin-sign"></i></a></p>
            <p id="tags">
              <% blog.tags.each do |tag, details| %>
                <% if self.current_resource.metadata[:locals]["tagname"] && tag == tagname %>
                  <span><%= tag %></span>
                <% else %>
                  <%= link_to tag, tag_path(tag), class: 'DWjax' %>
                <% end %>
              <% end %>
            </p>
          </div>
          <div id="content" class="span9">
            <% page_articles.each do |article| %>
              <a href="<%= article.url %>" class="DWjax">
                <div class="image">
                  <%= image_tag article.data.image %>
                  <h3><%= article.data.title %></h3>
                </div>
              </a>
              <p><%= article.data.blurb %></p>
              <%= link_to "Read more", article, class: 'DWjax' %>
              <p class="separator"><i class="icon-circle"></i> <i class="icon-circle"></i> <i class="icon-circle"></i></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12" id="footer">
          &copy; 2013 Daniel Westendorf - <a target="_blank" href="https://github.com/danielwestendorf/portfolio"> See the Source</a>
        </div>
      </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <%= javascript_include_tag  "all" %>
  </body>
</html>